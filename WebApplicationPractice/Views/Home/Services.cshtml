@{
    ViewData["Title"] = "Services Offered";
}
<h1>@ViewData["Title"]</h1>

<h2>Calculate Singing Lesson price per month</h2>
<p>Channing offers singing lessons at a rate of $40 per hour.</p>
<form id="lessonCalculator">
    <label for="hourlyRate">Hourly Rate:</label>
    <input type="text" id="hourlyRate" value="$40/hr" readonly>

    <label for="numLessons">Lessons per Month (Max: 4):</label>
    <input type="number" id="numLessons" min="1" max="4" required>

    <label for="lessonDuration">Lesson Duration (30-60 minutes):</label>
    <input type="number" id="lessonDuration" min="30" max="60" required>

    <button type="button" id="calculateBtn">Calculate Cost</button>

    <label for="totalCost">Total Monthly Cost:</label>
    <input type="text" id="totalCost" value="$0.00" readonly>

    <p id="lessonWarning" style="color: red; display: none;">
        You can only book up to 4 lessons per month.
    </p>

    <p id="durationWarning" style="color: red; display: none;">
        Lesson duration must be between 30 and 60 minutes.
    </p>
</form>


<script src="~/js/calculator.js"></script>
