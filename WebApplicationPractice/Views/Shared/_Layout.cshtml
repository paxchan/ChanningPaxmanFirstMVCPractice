<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Specifies character encoding for the document -->
    <meta charset="utf-8"/>
    
    <!-- Ensures proper rendering and touch zooming on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    
    <!-- Sets the title dynamically based on the current view -->
    <title>@ViewData["Title"] - Channing Paxman</title>

    <!-- Favicon (small icon displayed in the browser tab) -->
    <link rel="icon" type="image/x-icon" href="~/favicon_io/favicon.ico" asp-append-version="true">
    
    <!-- Apple Touch Icon for iOS devices -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicon_io/apple-touch-icon.png">
    
    <!-- Additional favicon sizes for different browsers -->
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon_io/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon_io/favicon-16x16.png">

    <!-- Bootstrap CSS for styling -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    
    <!-- Custom site-specific CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    
    <!-- Additional project styles -->
    <link rel="stylesheet" href="~/WebApplicationPractice.styles.css" asp-append-version="true"/>
    
    <!-- jQuery library for client-side scripting -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

<!-- Header section with a navigation bar -->
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <!-- Website name with a link to the home page -->
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Channing Paxman</a>

            <!-- Collapsible button for mobile navigation -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation links -->
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <!-- Home page link -->
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <!-- Singing Lessons page link -->
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Services">Singing Lessons</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Main content container -->
<div class="container">
    <main role="main" class="pb-3">
        <!-- This is where the content of each view will be rendered -->
        @RenderBody()
    </main>
</div>

<!-- Footer section -->
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Built by Channing Paxman 
        <a asp-area="" asp-controller="Home" asp-action="Services"></a>
    </div>
</footer>

<!-- jQuery script from local library -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap JavaScript bundle (includes Popper.js for Bootstrap functionality) -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom JavaScript file -->
<script src="~/js/site.js" asp-append-version="true"></script>

<!-- Allows views to inject additional scripts if needed -->
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
